@section Styles{
    <link href="~/lib/select2/dist/css/select2.min.css" rel="stylesheet" />
}
@section Scripts{
    <script src="~/lib/select2/dist/js/select2.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $(".cari-tipe").select2({
                minimumInputLength: 2,
                width: '100%'
            });
            $(".cari-jenis").select2({
                width: '100%'
            });
            $(".cari-pj").select2({
                width: '100%'
            });
        });
    </script>
}

